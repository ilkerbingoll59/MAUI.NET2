<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="final.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:final"
    Shell.FlyoutBehavior="Flyout">


    <ShellContent
        Icon="home.png"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"
        Title="Giriş"/>

    <ShellContent
        Icon="alarm.png"
        Title="Kurlar"
        ContentTemplate="{DataTemplate local:DovizKurlari}"
        Route="Kurlar" />

    <ShellContent
        Icon="bulut.png"
        Title="Hava Durumu"
        ContentTemplate="{DataTemplate local:Hava_Durumu}"
        Route="Hava Durumu" />
    <ShellContent
        Icon="todo.png"
        Title="Yapılacaklar Listesi"
        ContentTemplate="{DataTemplate local:Yapilacaklar}"
        Route="Yapılacaklar Listesi" />

</Shell>
